<!DOCTYPE html>
<html>
    <head>
        <title> 包整 </title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>

        <div class="container-fluid">
            <%= render "common/navbar" %>
            <%= render "common/flashes" %>
            <div class="row">
              <div class="col-md-2">
                <h3><i class="fa fa-user-circle fa-1x"> 达人后台</i></h3>

                <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top:20px;">

                  <li>
                    <%= link_to(content_tag(:i, " 我的作品", class: "fa fa-file-o"), admin_works_path) %>
                  </li>
                  <li>
                    <%= link_to(content_tag(:i, " 我的抢单", class: "fa fa-list"), joined_requests_admin_request_path(current_user.token)) %>
                  </li>

                  <hr>

                   <li>
                    <%= link_to(content_tag(:i, " 全部用户", class: "fa fa-users"), admin_users_path) %>
                   </li>

                   <li>
                    <%= link_to(content_tag(:i, " 全部订单", class: "fa fa-archive"), admin_requests_path) %>
                   </li>
                </ul>
              </div>

              <div class="col-md-10">
                <%= yield %>
              </div>
        </div>

        <%= render "common/footer" %>

    </body>
</html>
