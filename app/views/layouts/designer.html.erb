<!DOCTYPE html>
<html>
    <head>
        <title> 包整 </title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>

        <div class="container main">
            <%= render "common/navbar" %>
            <%= render "common/flashes" %>
            <div class="row main">
              <div class="col-md-2 margin-left:20px; ">
                <h3 style="max-width: 250px;margin-left: 28px;"> 达人后台</h3>

                  <ul class="list-group" style="max-width: 250px; padding-top:15px; margin-left: 20px;">
                    <li class="list-group-item active text-center" >
                      达人看板
                    </li>
                   <li class="list-group-item">
                     <%= link_to(content_tag(:i, " 我的抢单", class: "fa fa-list"), designer_requests_path(current_user.token)) %>                   </li>
                   <li class="list-group-item">
                     <%= link_to(content_tag(:i, " 我的作品", class: "fa fa-file-o"), designer_works_path) %>
                   </li>
                   <li class="list-group-item"> <%= link_to(content_tag(:i, " 我的消息", class: "fa fa-envelope"), designer_conversations_path) %> </li>
                   <li class="list-group-item"> <%= link_to(content_tag(:i, " 用户资料", class: "fa fa-address-card"), edit_designer_user_path(current_user.token)) %> </li>
                   <li class="list-group-item"> <%= link_to(content_tag(:i, " 变更密码", class: "fa fa-key"), edit_user_registration_path) %> </li>


                </ul>
              </div>

              <div class="col-md-10">
                <%= yield %>
              </div>
        </div>

        <%= render "common/footer" %>

    </body>
</html>
