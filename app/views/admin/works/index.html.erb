<div class="pull-right">
  <%= link_to("添加作品", new_admin_work_path, :class => "btn btn-default" ) %>
</div>

<br><br>

<table class="table table-bordered">

  <thead>
    <tr>
      <th>图片</th>
      <th>作品名称</th>
      <th>描述</th>
      <th>参考价格</th>
      <th>编辑</th>
    </tr>
  </thead>
  <% @works.each do |work| %>
  <tr>
    <td>
      <% if work.image.present? %>
        <%= image_tag(work.image.thumb.url, class:"thumbnail") %>
      <% else %>
        <%= image_tag("http://placehold.it/200x200", class:"thumbnail")%>
      <% end %>
    </td>
    <td>
      <%= render_work_status(work) %>
      <%= work.title%>
    </td>
    <td>
      <%= work.description %>
    </td>
    <td>
      <%= work.price %>
    </td>
    <td>
      <%= link_to("Edit", edit_admin_work_path(work), :class => "btn btn-xs btn-default") %>
      |
      <%= link_to("Destroy", admin_work_path(work), :method => :delete, :data => { :confirm => "Are you sure?" }, :class => "btn btn-xs btn-default") %>
      |

     <% if work.is_hidden %>
       <%= link_to("Publish", publish_admin_work_path(work), :method => :post, :class => "btn btn-xs btn-default") %>
     <% else %>
       <%= link_to("Hide", hide_admin_work_path(work), :method => :post, :class => "btn btn-xs btn-default") %>
     <% end %>
    </td>
  </tr>
  <% end %>
</table>
