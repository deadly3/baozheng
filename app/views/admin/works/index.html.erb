<div class="pull-right">
  <%= link_to("添加作品", new_admin_work_path, :class => "btn btn-default" ) %>
</div>

<br><br>

<table class="table table-bordered">

  <thead>
    <tr>
      <th>作品名称</th>
      <th>描述</th>
      <th>参考价格</th>
      <th>图片</th>
      <th>编辑</th>
    </tr>
  </thead>
  <% @works.each do |work| %>
  <tr>
    <td>
      <%= work.title%>
    </td>
    <td>
      <%= work.description %>
    </td>
    <td>
      <%= work.price %>
    </td>
    <td>
      <%= work.image %>
    </td>
    <td>
      <%= link_to("Edit", edit_admin_work_path(work)) %>
      |
      <%= link_to("Destroy", admin_work_path(work), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
    </td>
  </tr>
  <% end %>
</table>
