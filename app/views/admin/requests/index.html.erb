<div>
 <h3>全部订单</h3>
</div>

<hr>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>主题</th>
      <th>当前照片</th>
      <th>理想照片</th>
      <th>创建时间</th>
      <th>发单用户</th>
      <th>合作对象</th>
      <th>订单状态</th>
      </tr>
  </thead>
  <tbody>
    <% @requests.each do |r| %>
    <tr>
      <td>
        <%= r.title %>
      </td>
      <td>
        <% if r.before_picture.present? %>
          <%= image_tag(r.before_picture.thumb.url, class:"thumbnail") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200", class:"thumbnail")%>
        <% end %>
      </td>
      <td>
        <% if r.dream_picture.present? %>
          <%= image_tag(r.dream_picture.thumb.url, class:"thumbnail") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200", class:"thumbnail")%>
        <% end %>
      </td>
      <td>
        <%= r.created_at.strftime("%F %T") %>
      </td>
      <td>
        <% if r.user.present? %>
        <%= r.user.nickname %>
        <% end %>
      </td>
      <td>
        <% if r.winner.present? %>
        达人<%= r.winner %>
        <% else %>
          尚无
        <% end %>
      </td>
      <td>
        <% if r.paid? %>
          已成单
        <% elsif r.selected? %>
          已选定合作达人,等待申请者付款
        <% elsif r.request_made? %>
          抢单进行中
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
