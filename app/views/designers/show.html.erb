<!-- 以下的目的 是把五角小星星再显示出来 -->
  <script>
  <% @feedbacks.each do |f| %>
$(function() {
    // 锁定部分样式
     $("#feedback-<%= f.id %>").raty({
      path:"/",
      starOff: 'star-off.png',
      starOn: 'star-on.png',
      size: 32,
      readOnly: true,
      score: '<%= f.rating %>'
    });

});

  <% end %>
</script>
