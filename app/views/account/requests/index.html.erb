<br>
<%= link_to("发起订单", new_account_request_path, class: "btn btn-default pull-left") %>

<br><br>

<table class="table table-bordered">

  <thead>
    <tr>
      <th>主题</th>
      <th>当前照片</th>
      <th>梦想照片</th>
      <th>修改/删除</th>
      <th>创建时间</th>
      <th>订单状态</th>
      </tr>
  </thead>

  <tbody>
  <% @requests.each do |r| %>
  <tr>
    <td>
      <%= link_to(r.title, account_requests_path(r.token)) %>
    </td>
    <td>
      <% if r.before_picture.present? %>
        <%= image_tag(r.before_picture.thumb.url, class:"thumbnail") %>
      <% else %>
        <%= image_tag("http://placehold.it/200x200", class:"thumbnail")%>
      <% end %>
    </td>
    <td>
      <% if r.dream_picture.present? %>
        <%= image_tag(r.dream_picture.thumb.url, class:"thumbnail") %>
      <% else %>
        <%= image_tag("http://placehold.it/200x200", class:"thumbnail")%>
      <% end %>
    </td>
    <td>
      <%= link_to("修改", edit_account_request_path(r.token), :class => "btn") %>
      /
      <%= link_to("删除", account_request_path(r.token), :method => :delete, :data => { :confirm => "Are you sure?" }, :class => "btn") %>
    </td>
    <td>
      <%= r.created_at.strftime("%F") %>
    </td>
    <td>
      <%= r.aasm_state %>
    </td>
  </tr>
  <% end %>
</tbody>
</table>
