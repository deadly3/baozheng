<br>
<%= link_to("发起订单", new_account_request_path, class: "btn btn-danger pull-left") %>

<br><br>

<table class="table table-bordered">

  <thead>
    <tr>
      <th>主题</th>
      <th>当前照片</th>
      <th>梦想照片</th>
      <th>修改/删除</th>
      <th>创建时间</th>
      <th>抢单状态</th>
      </tr>
  </thead>

  <tbody>
  <% @requests.each do |r| %>
  <tr>
    <td>
      <%= link_to(r.title, account_requests_path(r.token)) %>
    </td>
    <td>
      <% if r.before_picture.present? %>
        <%= image_tag(r.before_picture.thumb.url, class:"thumbnail") %>
      <% else %>
        <%= image_tag("http://placehold.it/200x200", class:"thumbnail")%>
      <% end %>
    </td>
    <td>
      <% if r.dream_picture.present? %>
        <%= image_tag(r.dream_picture.thumb.url, class:"thumbnail") %>
      <% else %>
        <%= image_tag("http://placehold.it/200x200", class:"thumbnail")%>
      <% end %>
    </td>
    <td>
      <% if r.applicants.present? %>
       已有人抢单的订单不可以修改
      <% else %>
      <%= link_to("Edit", edit_account_request_path(r.token), :class => "btn btn-xs btn-default") %>
      <% end %>
      <br>
      <%= link_to("Destroy", account_request_path(r.token), :method => :delete, :data => { :confirm => "Are you sure?" }, :class => "btn btn-xs btn-default") %>
    </td>
    <td>
      <%= r.created_at %>
    </td>
    <td>
      <%= link_to("查看已抢单达人", edit_account_request_path(r.token), :class => "btn btn-xs btn-warning") %>
    </td>
  </tr>
  <% end %>
</tbody>
</table>
