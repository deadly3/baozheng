<div>

  <%= simple_form_for [:account, current_user] do |f|%>



  <% if current_user.avatar.present? %>
    <%= image_tag(current_user.avatar.thumb.url) %>
  <% else %>
    <%= image_tag current_user.gravatar_url(:size => 100) %>
  <% end %>

  <%= f.input :avatar, as: :file, :label => "头像" %>

  
    <%= f.input :nickname, label:"昵称" %>
    <%= f.input :description, label:"个性签名" %>


    <%= f.submit " 提交", disabled_with: "提交中。。。。" %>
  <% end %>
</div>

